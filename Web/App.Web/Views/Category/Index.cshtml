@model List<App.Services.Models.Category.CategoryViewModel>
@{
    ViewData["Title"] = "Index";
}

<ul class="list-group">

    @for (int i = 0; i < Model.Count(); i++)
    {
        <a asp-controller="Category" asp-action="Details" asp-route-id="@Model[i].Id">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @Model[i].Name
                <span class="badge badge-primary badge-pill">@Model[i].Count</span>
            </li>
        </a>
    }
 </ul>

