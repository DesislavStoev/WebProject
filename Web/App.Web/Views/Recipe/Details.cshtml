@model App.Services.Models.Recipe.DetailsRecipeViewModel

<div class="container-fluid" style="background-color:lavender;">
    <div class="row">
        <div class="col-sm-6 col-md-6">@Model.Name</div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6">
            <img src="@Model.SmallPictureUrl" alt="Няма изображение" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6">
            @Model.Directions.Method
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4 col-md-4">
            <!-- Ingredients-->
            @foreach (var ingredient in Model.Ingredients)
            {
                <div class="col-sm-2 col-md-2">
                    @ingredient.Name
                </div>
                <div class="col-sm-2 col-md-2">
                    @ingredient.Quantity
                </div>
            }
        </div>
        <div class="col-sm-2 col-md-2">
            @Model.Directions.Serves
        </div>
        <div class="col-sm-2 col-md-2">
            @Model.Directions.PrepTime
        </div>
        <div class="col-sm-2 col-md-2">
            @Model.Directions.CookTime
        </div>
        <div class="col-sm-2 col-md-2">
            @Model.Directions.CookSkill.ToString()
        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index" asp-controller="Home">Обратно към Начална страница</a>
</div>
