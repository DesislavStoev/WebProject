@model App.Services.Models.Comment.CreateCommentViewModel
@{
    var id = ViewData["recipeId"];
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">Коментар</label>
                <input asp-for="RecipeId" value="@id" hidden/> 
                <textarea asp-for="Content" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добави" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>